<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6535"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="83dp"
        android:fontFamily="@font/hubballi_regular"
        android:text="Calculator"
        android:textColor="#FFFFFF"
        android:textSize="60dp" />

    <EditText
        android:id="@+id/first_numbre"
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="300dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#FBF9F9"
        android:breakStrategy="simple"
        android:ems="10"
        android:hint="first numbre"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/cardview_light_background" />


    <EditText
        android:id="@+id/second_numbre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#FBF9F9"
        android:ems="10"
        android:hint="second numbre"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/cardview_light_background" />

    <Button
        android:id="@+id/add"
        android:layout_width="152dp"
        android:layout_height="59dp"
        android:layout_above="@+id/rest"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="153dp"
        android:background="#E12315"
        android:shadowColor="#FFFDFD"
        android:text="calculate"
        android:textAllCaps="false"
        android:textSize="30dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="33dp"
        android:background="#55596E"
        android:shadowColor="#FFFDFD"
        android:text="Rest"
        android:textAllCaps="false"
        android:textSize="23dp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/hubballi_regular"
        android:text="total"
        android:textColor="#FFF"
        android:textSize="50dp" />


</RelativeLayout>